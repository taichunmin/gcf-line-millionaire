{
  "name": "gcf-line-millionaire",
  "version": "1.0.0",
  "description": "一個模擬「Who Wants to Be a Millionaire?」的 LINE 聊天機器人，用來示範如何在聊天機器人中使用 Google Analytics，並且搭配 Data Studio 來做出有意義的圖表。",
  "main": "index.js",
  "repository": "git@github.com:taichunmin/gcf-line-millionaire.git",
  "author": "taichunmin <taichunmin@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "@hapi/joi": "^17.1.1",
    "@line/bot-sdk": "^6.8.4",
    "axios": "^0.19.2",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "firebase-admin": "^8.12.1",
    "lodash": "^4.17.19",
    "papaparse": "^5.2.0",
    "qs": "^6.9.4"
  },
  "devDependencies": {
    "eslint": "^7.1.0",
    "eslint-config-standard": "^14.1.1",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.1",
    "morgan": "^1.10.0"
  },
  "scripts": {
    "deploy": "gcloud functions deploy line-millionaire --region=us-central1 --allow-unauthenticated --entry-point=main --memory=128MB --runtime=nodejs10 --timeout=60s --env-vars-file=.env.yaml --max-instances=1 --trigger-http",
    "dev": "pm2 start dev.js --name line-millionaire --watch --ignore-watch=\"node_modules\" --ignore-watch=\".git\" --restart-delay 1000 --no-daemon",
    "ngrok": "ngrok http 3000"
  }
}
